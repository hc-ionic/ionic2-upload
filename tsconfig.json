{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "js",
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "js"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
